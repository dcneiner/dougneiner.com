---
const currentUrl = Astro.url.pathname;
const navLinks = [
  { label: "About", url: "/about" },
  { label: "Speaking", url: "/speaking" },
];
---

<header>
  <a class="sr-only" href="#main">Skip to main content</a>

  <h1><a href="/">Doug Neiner</a></h1>

  <nav aria-label="Main">
    <ul>
      {
        navLinks.map((link) => (
          <li>
            {currentUrl.startsWith(link.url) ? (
              <>
                <span class="sr-only">Current: </span>
                {link.label}
              </>
            ) : (
              <a href={link.url}>{link.label}</a>
            )}
          </li>
        ))
      }
    </ul>
  </nav>
</header>

<style>
  header {
    display: flex;
    flex-direction: column;
    align-items: center;
  }

  @media screen and (width >= 25em) {
    header {
      flex-direction: row;
      justify-content: space-between;
      height: 5rem;
    }
  }

  h1 {
    font-weight: 200;
    text-transform: uppercase;
    letter-spacing: 2px;

    a {
      text-decoration: none;
      color: var(--text-primary);
      transition: color ease-in-out 200ms;

      &:hover {
        color: var(--link);
      }
    }
  }

  nav {
    ul {
      list-style: none;
      margin: 0;
      padding: 0;
      display: flex;
      flex-direction: row;
      gap: 15px;
    }
  }
</style>
